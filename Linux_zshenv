##AERIE
export SOFTWARE_BASE=/home/zhixiang/software
export APERC="/home/hawc/software/externals/aperc"
hawc-externals() {
   eval `/home/hawc/software/externals/ape/ape sh externals`
   #eval `$SOFTWARE_BASE/externals/ape/ape sh externals-online`
}
aerie-current() {
   hawc-externals
   eval `$SOFTWARE_BASE/aerie/install/bin/hawc-config --env-sh`
   export CONFIG_HAWC=$SOFTWARE_BASE/config-hawc
}

# set up AERIE
hawc-externals 
aerie-current

#without fermi:
threeML() {
  aerie-current
  #fermiST
  source /home/rlauer/hawc/software/3ML_env/bin/activate
  export OMP_NUM_THREADS=1
  export MKL_NUM_THREADS=1
  export NUMEXPR_NUM_THREADS=1
  export SITEPACKAGES=/home/rlauer/hawc/software/3ML_env/lib/python2.7/site-packages
}

# environment via anaconda
anaconda(){
  export PATH="/home/zhixiang/anaconda3/bin:$PATH"
  source /home/zhixiang/anaconda3/bin/activate
  export OMP_NUM_THREADS=1
  export MKL_NUM_THREADS=1
  export NUMEXPR_NUM_THREADS=1
}
anaconda

# hawc test environment via miniconda
miniconda(){
  export PATH="/home/hawc/software/miniconda/bin:$PATH"
  source /home/hawc/software/miniconda/bin/activate
  source activate hawc_test
  export OMP_NUM_THREADS=1
  export MKL_NUM_THREADS=1
  export NUMEXPR_NUM_THREADS=1
}


export PRESERVE_LD_LIBRARY_PATH="$LD_LIBRARY_PATH" 

